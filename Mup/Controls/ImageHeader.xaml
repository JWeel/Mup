<UserControl x:Class="Mup.Controls.ImageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Button Name="InitButton" Content="+" Click="Init" MinWidth="20" MaxHeight="20" />
        <Grid Name="HeaderGrid" Visibility="Collapsed" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Padding="2" Content="{Binding Path=Model.FileName, Mode=OneWay}" Name="HeaderButton" Click="Select" />
            <StackPanel Name="OptionGrid" HorizontalAlignment="Center" Grid.Row="1" Orientation="Horizontal">
                <Button Padding="0 -2 0 2" Margin="1 2 1 0" Name="UndoButton" IsEnabled="False" Click="Undo" Content="⤺" Height="15" Width="15" />
                <Button Padding="0 -2 0 2" Margin="1 2 1 0" Name="RedoButton" IsEnabled="False" Click="Redo" Content="⤻" Height="15" Width="15" />
                <Button Padding="0 -2 0 2" Margin="1 2 1 0" Name="CloseButton" Click="Close" Content="×" Height="15" Width="15" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>