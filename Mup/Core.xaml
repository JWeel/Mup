                    <Label Name="Label_State" Foreground="#EEEEEE" Background="#0066BB" HorizontalContentAlignment="Center" Content="Select" Margin="5" />
                    <Button Content="Select File" Click="SelectFile" Margin="5" />
                    <Label Name="Label_FileName" Foreground="#EEEEEE" Background="#555555" Content="" Margin="5" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" Content="Distinct" Click="SelectFile" Margin="5" />
                        <Button Grid.Column="1" Grid.Row="0" Content="Islands" Click="SelectFile" Margin="5" />
                        <Button Grid.Column="0" Grid.Row="1" Content="Merge" Click="SelectFile" Margin="5" />
                        <Button Grid.Column="1" Grid.Row="1" Content="Border" Click="SelectFile" Margin="5" />
